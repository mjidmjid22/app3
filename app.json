{
  "expo": {
    "name": "Mantaevert Worker Management",
    "slug": "my-company-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "mantaevertapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mantaevert.workermanagement"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.mantaevert.workermanagement"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "description": "Professional worker management system for Mantaevert company. Track attendance, manage receipts, and handle worker data efficiently.",
    "githubUrl": "https://github.com/rx7-boop/app2",
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#000000"
        }
      ]
    ],
    "extra": {
      "router": {},
      "eas": {
        "projectId": "e9f6f1ec-7caf-407b-85af-a526d963fc31"
      }
    }
  }
}
